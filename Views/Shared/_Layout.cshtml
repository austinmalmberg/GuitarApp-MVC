<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="container-fluid p-0 m-0 row">
    <div id="sidebar" class="sticky-top col-md-2 col-xl-1">
        <div class="sticky-top">
            @*Brand*@
            @Html.ActionLink("TabWiki", "Index", "Home", null, new { @class = "navbar-brand py-4 w-100" })

            @*Navigational content goes here*@
            <ul class="list-unstyled">
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
        </div>
    </div>

    <div class="body-content col">
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary mb-3">
            <ul class="nav nav-pills">
                <li class="nav-item">@Html.ActionLink("Browse Artists", "Browse", "Artist", null, new { @class = "nav-link" })</li>
            </ul>

            @*Login/nav header*@
            @Html.Partial("_LoginPartial")
        </nav>

        @*Main content*@
        @RenderBody()

        <hr class="my-4 bg-light" />

        @*Footer*@
        <footer class="container-fluid text-center my-3 py-3">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
