@model BrowseArtistsViewModel

@{
    ViewBag.Title = "Artists";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Artist")
</p>

<ul class="list-group">
@foreach (var artist in Model.Artists) {
    <li class="list-group-item d-flex justify-content-between">
        @Html.ActionLink(@artist.Name, "Details", "Artist", new { id = artist.ArtistID }, null)
        <span>
        @Html.ActionLink("Edit", "Edit", "Artist", new { id = artist.ArtistID }, null) |
        @Html.ActionLink("Delete", "Delete", "Artist", new { id = artist.ArtistID }, null)
        </span>
    </li>
}
</ul>
