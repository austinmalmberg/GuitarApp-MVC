@model ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}


@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <h1>@ViewBag.Title</h1>
    <hr class="mb-4 bg-light" />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(m => m.OldPassword, new { @class = "col-lg-2 control-label" })
        <div class="col">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-lg-2 control-label" })
        <div class="col">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-lg-2 control-label" })
        <div class="col">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>

    <input type="submit" value="Change password" class="btn btn-info btn-lg" />
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}