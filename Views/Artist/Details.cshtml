@model ArtistDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h3>@Html.DisplayFor(model => model.Name)</h3>
<p>@Html.ActionLink("Edit", "Edit", new { id = Model.ArtistID })</p>

<ul class="list-group">
@foreach (var song in Model.Songs)
{
    <li class="list-group-item">
        @Html.ActionLink(song.Name, "Details", "Song", new { id = song.SongID }, null)
    </li>
}
</ul>

<p>@Html.ActionLink("Add Song", "Create", "Song", new { ArtistID = Model.ArtistID, ArtistName = Model.Name }, null)</p>
