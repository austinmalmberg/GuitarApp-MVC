@model BrowseViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome</h1>
    <p class="lead"></p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md">
        <h2>Popular Artists</h2>
        <div class="list-group">
        @foreach (var artist in Model.Artists) {
            @Html.ActionLink(artist.Name, "Details", "Artist", new { id = artist.ArtistID }, new { @class = "list-group-item list-group-item-action" })
        }
        </div>
    </div>
    <div class="col-md">
        <h2>Popular Songs</h2>
        <div class="list-group">
        @foreach (var song in Model.Songs) {
            @Html.ActionLink(song.Name, "Details", "Song", new { id = song.SongID }, new { @class = "list-group-item list-group-item-action" })
        }
        </div>
    </div>
</div>